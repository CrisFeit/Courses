{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2022",
    "module": "es2015"
  },
  "baseUrl": ".",
  "paths": {
    "src/*": [
      "src/*"
    ],
    "database/*": [
      "database/*"
    ],
    "tests/*": [
      "tests/*"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".nuxt",
    "coverage",
    "jspm_packages",
    "tmp",
    "temp",
    "bower_components",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true
  }
}